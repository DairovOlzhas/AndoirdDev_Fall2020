<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".30"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="100+23"
            android:textAlignment="textEnd"
            android:textColor="@color/colorWhite"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/colorWhite"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ButtonRow">

            <Button
                android:id="@+id/erace"
                style="@style/OperButton"
                android:text="C" />

            <Button
                android:id="@+id/sign"
                style="@style/OperButton"
                android:text="+-" />

            <Button
                android:id="@+id/percent"
                style="@style/OperButton"
                android:text="%" />

            <Button
                android:id="@+id/divide"
                style="@style/OperButton"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            style="@style/ButtonRow">

            <Button
                android:id="@+id/num1"
                style="@style/NumButton"
                android:text="1" />

            <Button
                android:id="@+id/num2"
                style="@style/NumButton"
                android:text="2" />

            <Button
                android:id="@+id/num3"
                style="@style/NumButton"
                android:text="3" />

            <Button
                android:id="@+id/multiply"
                style="@style/OperButton"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            style="@style/ButtonRow">

            <Button
                android:id="@+id/num4"
                style="@style/NumButton"
                android:text="4" />

            <Button
                android:id="@+id/num5"
                style="@style/NumButton"
                android:text="5" />

            <Button
                android:id="@+id/num6"
                style="@style/NumButton"
                android:text="6" />

            <Button
                android:id="@+id/minus"
                style="@style/OperButton"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            style="@style/ButtonRow">

            <Button
                android:id="@+id/num7"
                style="@style/NumButton"
                android:text="7" />

            <Button
                android:id="@+id/num8"
                style="@style/NumButton"
                android:text="8" />

            <Button
                android:id="@+id/num9"
                style="@style/NumButton"
                android:text="9" />

            <Button
                android:id="@+id/plus"
                style="@style/OperButton"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            style="@style/ButtonRow">

            <Button
                android:id="@+id/num0"
                style="@style/NumButton"
                android:layout_weight=".50"
                android:text="0" />

            <Button
                android:id="@+id/numDot"
                style="@style/NumButton"
                android:text="." />

            <Button
                android:id="@+id/total"
                style="@style/EqualButton"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>