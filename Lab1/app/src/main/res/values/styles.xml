<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonRow">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">.20</item>
    </style>

    <style name="Button">
        <item name="clickAction" />
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">.25</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="NumButton" parent="Button">
        <item name="android:background">#1F1F1F</item>
    </style>
    <style name="OperButton" parent="Button">
        <item name="android:background">#393939</item>
    </style>
    <style name="EqualButton" parent="Button">
        <item name="android:background">#F09609</item>
    </style>

</resources>